### Visuals
font-family = FiraMono Nerd Font Mono
font-size = 18 
theme = NvimDark
cursor-style = block

mouse-scroll-multiplier = 2
window-decoration = false
window-new-tab-position = end
confirm-close-surface = false

### keybindings
keybind = ctrl+r=reload_config

keybind = ctrl+t=new_tab
keybind = ctrl+w=close_surface

# scrolling behaviour - Might be changed, if vim mode is added
keybind = alt+up=scroll_page_lines:-1
keybind = alt+down=scroll_page_lines:1

keybind = page_up=scroll_page_up
keybind = page_down=scroll_page_down

# splits
keybind = ctrl+shift+v=new_split:right

keybind = ctrl+up=goto_split:top
keybind = ctrl+down=goto_split:bottom
keybind = ctrl+right=goto_split:right
keybind = ctrl+left=goto_split:left

# Search, for whenever that is added
# keybind = ctrl+s=search

# automatically copy to clipboard, when marking text with mouse
copy-on-select = clipboard
keybind = ctrl+v=paste_from_clipboard
